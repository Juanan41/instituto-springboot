###################################################################
#                    CRUD COMPLETO INSTITUTOS                     #
#             Compatible con tu API /api/v1/institutos            #
###################################################################

###########################################################
### 1. GET – Obtener todos los institutos
###########################################################
GET http://localhost:3000/api/v1/institutos


###########################################################
### 2. GET – Buscar instituto por nombre
### Devuelve una lista filtrada por nombre exacto
###########################################################
GET http://localhost:3000/api/v1/institutos?nombre=Francisco de Quevedo


###########################################################
### 3. GET – Buscar instituto por códigoInstituto
### Ejemplo: ABC-1234
###########################################################
GET http://localhost:3000/api/v1/institutos?codigoInstituto=ABC-1234


###########################################################
### 4. GET – Obtener instituto por ID
###########################################################
GET http://localhost:3000/api/v1/institutos/1


###########################################################
### 5. POST – Crear instituto correcto (HTTP 201 Created)
### Este ejemplo cumple TODAS las validaciones
###########################################################
POST http://localhost:3000/api/v1/institutos
Content-Type: application/json

{
  "nombre": "Instituto Prueba",
  "ciudad": "Sevilla",
  "direccion": "Calle Inventada 10",
  "telefono": "123-45-67-89",
  "email": "test@mail.com",
  "estudiantes": 300,
  "numeroProfesores": 15,
  "tipo": "publico",
  "anioFundacion": "2000-05-15",
  "codigoInstituto": "ABC-1234"
}


###########################################################
### 6. POST – Crear instituto con ERRORES (HTTP 400)
### Este ejemplo provocará errores de validación:
### - nombre vacío
### - teléfono incorrecto
### - email no válido
### - códigoInstituto vacío
### - estudiantes = 0 (no permitido)
###########################################################
POST http://localhost:3000/api/v1/institutos
Content-Type: application/json

{
  "nombre": "",
  "ciudad": "Madrid",
  "direccion": "Calle Falsa 123",
  "telefono": "555443322",
  "email": "correo_invalido",
  "estudiantes": 0,
  "numeroProfesores": 0,
  "tipo": "publico",
  "anioFundacion": "2020-12-12",
  "codigoInstituto": ""
}


###########################################################
### 7. PUT – Actualizar COMPLETAMENTE un instituto
### Se deben enviar todos los campos o dará error 400
###########################################################
PUT http://localhost:3000/api/v1/institutos/1
Content-Type: application/json

{
  "nombre": "Instituto Tecnológico",
  "ciudad": "Barcelona",
  "direccion": "Calle Innovación 22",
  "telefono": "987-65-43-21",
  "email": "nuevo@mail.com",
  "estudiantes": 500,
  "numeroProfesores": 40,
  "tipo": "concertado",
  "anioFundacion": "1999-05-15",
  "codigoInstituto": "TEC-9988"
}


###########################################################
### 8. PATCH – Actualización PARCIAL del instituto
### Solo se envían los campos a actualizar
###########################################################
PATCH http://localhost:3000/api/v1/institutos/1
Content-Type: application/json

{
  "direccion": "Calle Nueva 75",
  "telefono": "111-22-33-44"
}


###########################################################
### 9. DELETE – Eliminación lógica
### Marca isDeleted = true
###########################################################
DELETE http://localhost:3000/api/v1/institutos/1


###################################################################
#                      CRUD COMPLETO NOMBRES                      #
#               Compatible con /api/v1/nombres                    #
###################################################################

###########################################################
### 1. GET – Obtener todos los registros
###########################################################
GET http://localhost:3000/api/v1/nombres


###########################################################
### 2. GET – Buscar por codigoInstituto
### Filtra por código exacto
###########################################################
GET http://localhost:3000/api/v1/nombres?codigoInstituto=ABC-1234


###########################################################
### 3. GET – Obtener nombre por ID
###########################################################
GET http://localhost:3000/api/v1/nombres/5


###########################################################
### 4. POST – Crear registro de nombre (correcto)
### códigoInstituto es obligatorio y único
###########################################################
POST http://localhost:3000/api/v1/nombres
Content-Type: application/json

{
  "codigoInstituto": "XYZ123",
  "isDeleted": false
}


###########################################################
### 5. POST – Errores de validación (HTTP 400)
### códigoInstituto NO puede estar vacío
###########################################################
POST http://localhost:3000/api/v1/nombres
Content-Type: application/json

{
  "codigoInstituto": ""
}


###########################################################
### 6. PUT – Actualización COMPLETA de un nombre
### Requiere TODOS los campos
###########################################################
PUT http://localhost:3000/api/v1/nombres/5
Content-Type: application/json

{
  "codigoInstituto": "NUEVO555",
  "isDeleted": false
}


###########################################################
### 7. PATCH – Actualización parcial
### Solo se envían los campos modificados
###########################################################
PATCH http://localhost:3000/api/v1/nombres/5
Content-Type: application/json

{
  "isDeleted": true
}


###########################################################
### 8. DELETE – Eliminación del registro
### Aquí es eliminación física (delete real)
###########################################################
DELETE http://localhost:3000/api/v1/nombres/5




